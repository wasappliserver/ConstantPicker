<!DOCTYPE html>
<html>
<body>
<div class="center">

  <h2 class="text-center">Nice to see you again
    <% user = User.find(session[:user_id]); %>
    <%= user.name %> !</h2>
</div>

<div class="well well-sm">
  <h2 class="page-header">Select an App:</h2>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>App Name</th>
      <th>Colors</th>
      <th>Numbers</th>
      <th>Strings</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>

    <% user.apps.each do |app| %>
        <tr>
          <td><%= app.name %></h3></td>
          <td><%= link_to 'Modify Colors', couleurs_path(app.id), :class => "btn btn-small btn-success" %></td>
          <td><%= link_to 'Modify Numbers', numbers_path(app.id), :class => "btn btn-small btn-danger" %></td>
          <td><%= link_to 'Modify Strings', at_strings_path(app.id), :class => "btn btn-small btn-primary" %></td>
          <td><%= link_to 'Launch Jenkins', start_jenkins_path(app.id), :class => "btn btn-small btn-warning" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<% if (UsersHelper.isAdmin(session[:user_id])==true) %>
    <div class="well well-sm text-center">
      <%= render :partial => "static/home_admin" %>
    </div>
<% end %>

<% if (session[:user_id]!= nil) %>
    <%= button_to 'Logout', logout_path, method: :delete, :class => "btn btn-info" %>
<% end %>

</body>
</html>