<%- model_class = Couleur -%>
<% %>
<div class="page-header">
  <h1>Colors of <%= @app.name %> </h1>
</div>

<table id="myTable" class="table table-striped tablesorter">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:coul_type) %></th>
    <th><%= model_class.human_attribute_name(:value_coul) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @app.couleurs.each do |couleur| %>
      <tr>
        <td><%= link_to couleur.id, couleur_path(couleur) %></td>
        <td><%= couleur.title %></td>
        <td><%= couleur.coul_type %></td>
        <td><%= couleur.value_coul%> </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_couleur_path(couleur), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      couleur_path(couleur),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New Color", new_couleur_path(@app.id), :class => 'btn btn-primary' %>
<%= link_to "Back to menu", root_path, :class => 'btn btn-secondary' %>
