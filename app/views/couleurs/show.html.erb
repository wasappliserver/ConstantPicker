<section class="wrapper" id="main-content">
  <%- model_class = Couleur -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @couleur.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:coul_type) %>:</strong></dt>
  <dd><%= @couleur.coul_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value_coul) %>:</strong></dt>
  <dd><%= @couleur.value_coul %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              couleurs_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_couleur_path(@couleur), :class => 'btn'%>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              couleur_path(@couleur),
              :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
</div>
</section>