<%= form_for @number, :html => {:class => 'form-horizontal'} do |f| %>
    <% if @number.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@number.errors.count, "error") %> prohibited this number from being saved:</h2>

          <ul>
            <% @number.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :value, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :value, :class => 'text_field' %>
      </div>
    </div>
    <% if (params[:format]!=nil)
         app_id= params[:format]
       else
         app_id = @number.app_id
       end %>
    <%= f.hidden_field :app_id, :value => "#{app_id}" %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  numbers_path(@number.app_id), :class => 'btn' %>
    </div>
<% end %>
