<%- model_class = Number -%>
<% %>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize, :class => "text-center" %> Panel of
    <%= @app.name %> </h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:value) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @app.numbers.each do |number| %>
      <tr>
        <td><%= link_to number.id, couleur_path(number) %></td>
        <td><%= number.title %></td>
        <td><%= number.value %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_number_path(number), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      number_path(number),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Number', new_number_path(@app.id), :class => 'btn btn-info' %>
<%= link_to "Back to menu", root_path, :class => 'btn btn-secondary' %>
