<%= form_for(@user, :html => {:multipart => true}) do |f| %>
    <div class="control-group">
      <%= f.label :app_ids %>
      <br>
        <%= f.collection_check_boxes(:app_ids, App.all, :id, :name) %>

      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>

    <%= link_to "Back to the list", users_path, :class => 'btn btn-secondary' %>
<% end %>