<section class="wrapper" id="main-content">
	<%= form_for(@user, :html => {:multipart => true}) do |f| %>
	<div class="control-group">
		<%= f.label :app_ids %>
		<br>

		<div class="checkbox">
			<%= f.collection_check_boxes(:app_ids, App.all, :id, :name) %>
		</div>
		<%= f.submit nil, :class => 'btn btn-primary' %>
	</div>

	<%= link_to "Back to the list", users_path, :class => 'btn btn-secondary' %>
	<% end %>
</section>
